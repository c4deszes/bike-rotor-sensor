{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "armgcc-default",
            "binaryDir": "${sourceDir}/_build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/armgcc-toolchain.cmake"
            },
            "hidden": true
        },
        {
            "name": "release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "hidden": true
        },
        {
            "name": "debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "hidden": true
        },
        {
            "name": "armgcc-release-unix",
            "inherits": ["armgcc-default"],
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "armgcc-debug-unix",
            "inherits": ["armgcc-default"],
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mingw-default",
            "binaryDir": "${sourceDir}/_build/${presetName}",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/mingw-toolchain.cmake"
            },
            "hidden": true
        }
    ],
    "buildPresets": [
        {
            "name": "build-app",
            "targets": [ "application-full"],
            "hidden": true
        },
        {
            "name": "build-docs",
            "targets": [ "Sphinx" ],
            "hidden": true
        },
        {
            "name": "build-tests",
            "targets": [ "test_Altitude" ],
            "hidden": true
        },
        {
            "name": "build-app-unix",
            "inherits": "build-app",
            "configurePreset": "armgcc-release-unix"
        }
    ],
    "testPresets": [
    ]
}