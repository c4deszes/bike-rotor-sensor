{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "avr-default",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "Unix Makefiles",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/avr-toolchain.cmake"
            },
            "hidden": true
        },
        {
            "name": "avr-release",
            "inherits": "avr-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "avr-minsizerel",
            "inherits": "avr-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel"
            }
        },
        {
            "name": "avr-debug",
            "inherits": "avr-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mingw-default",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "generator": "MinGW Makefiles",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/tools/cmake/mingw-toolchain.cmake"
            },
            "hidden": true
        },
        {
            "name": "mingw-debug",
            "inherits": "mingw-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-default",
            "targets": ["rotor-sensor-app-full", "rotor-sensor-standalone-full"],
            "hidden": true
        },
        {
            "name": "build-bootloader",
            "targets": ["uart-bootloader-full"],
            "hidden": true
        },
        {
            "name": "build-release",
            "inherits": "build-default",
            "configurePreset": "avr-release"
        },
        {
            "name": "build-debug",
            "inherits": "build-default",
            "configurePreset": "avr-debug"
        },
        {
            "name": "build-bootloader-release",
            "inherits": "build-bootloader",
            "configurePreset": "avr-release"
        },
        {
            "name": "build-tests",
            "targets": ["rotor-sensor-unittest", "rotor-sensor-siltest"],
            "hidden": true
        },
        {
            "name": "build-tests-mingw-debug",
            "inherits": "build-tests",
            "configurePreset": "mingw-debug"
        }
    ]
}
